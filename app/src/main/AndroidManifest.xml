<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.sightwalk" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Controllers.SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.Introduction.MainActivity" >
        </activity>
        <activity android:name=".Controllers.Introduction.LoginActivity" >
        </activity>
        <activity android:name=".Controllers.Introduction.RegisterActivity" >
        </activity>
        <activity android:name=".Controllers.Dashboard.DashboardActivity" >
        </activity>
        <activity android:name=".Controllers.Dashboard.ActivitiesActivity" >
        </activity>
        <activity android:name=".Controllers.Dashboard.StatsActivity" >
        </activity>
        <activity android:name=".Controllers.Dashboard.FavouritesActivity" >
        </activity>
        <activity android:name=".Controllers.SettingsActivity" >
        </activity>
    </application>

</manifest>