<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Tutorial.TutorialFragmentThree"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="40dp"
    android:paddingTop="60dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutThreeImageView"
        android:layout_alignParentTop="true"
        android:src="@drawable/tut3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tutorialThreeText"
        android:layout_alignEnd="@+id/tutorialThreeText"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De applicatie genereert een route voor u om meteen te bewandelen. Tijd om de mooie Sights te gaan bekijken!"
        android:id="@+id/tutorialThreeText"
        android:textAlignment="center"
        android:layout_below="@+id/tutThreeImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

</RelativeLayout>