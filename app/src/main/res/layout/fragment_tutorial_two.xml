<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Tutorial.TutorialFragmentTwo"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="40dp"
    android:paddingTop="60dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutTwoImageView"
        android:layout_alignParentTop="true"
        android:src="@drawable/tut2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tutorialTwoText"
        android:layout_alignEnd="@+id/tutorialTwoText"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kies snel en gemakkelijk interessante sights die u zou willen bezoeken. Pas de volgorde aan en kies waar u wilt beginnen."
        android:id="@+id/tutorialTwoText"
        android:textAlignment="center"
        android:layout_below="@+id/tutTwoImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

</RelativeLayout>